{
  "compilerOptions": {
		"resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"sourceMap": false,
		"declaration": true,
		"declarationMap": true,
    "experimentalDecorators": true,
    "lib": [
			"es2017",
			"esnext.asynciterable",
			"dom"
    ],
    "moduleResolution": "node",
    "module": "umd",
    "target": "es2015",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "rootDir": "./src",
    "outDir": "lib"
  },
  "include": ["src/*.ts"],
  "exclude": ["tests/*.ts"]
}
