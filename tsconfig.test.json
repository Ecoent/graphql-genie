{
  "compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"inlineSourceMap":true,
		"esModuleInterop": true,
		"allowUnreachableCode": false,
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
    "experimentalDecorators": true,
    "lib": [
			"es2017",
			"esnext.asynciterable",
			"dom"
    ],
    "moduleResolution": "node",
    "module": "umd",
    "target": "es2015",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "rootDir": "./src",
    "outDir": "lib"
  }
}
